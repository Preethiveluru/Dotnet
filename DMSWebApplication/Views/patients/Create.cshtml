@model DMSWebApplication.Models.patient

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>patient</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PName" class="control-label"></label>
                <input asp-for="PName" class="form-control" />
                <span asp-validation-for="PName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PDisease" class="control-label"></label>
                <input asp-for="PDisease" class="form-control" />
                <span asp-validation-for="PDisease" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="specilaist" class="control-label"></label>
               
                <select name="Specilaist" id="Specilaist" class="form-control">
                    <option></option>
                    <option>Cardiologist</option>
                    <option>Neurologist</option>
                    <option>Dermatologist</option>
                    <option>Oncologist</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () { $('#Specilaist').change(function () {
            var specilaist = $(this).val();
            var did = '';
            switch (specilaist) {
                case 'Cardiologist':
                did = '4';
                break;
                case 'Neurologist':
                did = '3';
                break;
                case 'Dermatologist':
                did = '1';
                break;
                case 'Oncologist':
                did = '2';
                break;
                default:
                did = '';
            }
            $('#DId').val(did);
        });
        });
    </script>


