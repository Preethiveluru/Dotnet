@model webApplicationwebAPIEFwithmvc.Models.PetAnimal

<h2>Delete Pet</h2>
<p>Are you sure you want to delete the following pet?</p>

<div>
    <h4>@Model.petName</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>ID</dt>
        <dd>@Model.petId</dd>
        <dt>Name</dt>
        <dd>@Model.petName</dd>
    </dl>
</div>


<form id="delete-form" method="post" action="@Url.Action("DeleteConfirmed", "Home")">
    <input type="hidden" name="id" value="@Model.petId" />
    <button type="button" onclick="submitDeleteForm()" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Cancel</a>
</form>

<script>
    function submitDeleteForm() {
        var form = document.getElementById('delete-form');
        form.submit();
    }
</script>
