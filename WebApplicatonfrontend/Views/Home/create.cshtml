
@{
    ViewData["Title"] = "create";
}

<h1>create</h1>
@model webApplicationwebAPIEFwithmvc.Models.PetAnimal

<h2>Add New Pet</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="petName">Pet Name</label>
        <input asp-for="petName" class="form-control" />
    </div>
    <div class="form-group">
        <label for="petType">Pet Type</label>
        <input asp-for="petType" class="form-control" />
    </div>
    <div class="form-group">
        <label for="DOB">Date of Birth</label>
        <input asp-for="DOB" class="form-control" />
    </div>
    <div class="form-group">
        <label for="IsVeg">Is Vegetarian</label>
        <input asp-for="IsVeg" class="form-control" type="checkbox" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>


